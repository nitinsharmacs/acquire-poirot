  link(rel='stylesheet' href='/css/index.css')
  link(rel='stylesheet' href='/css/game.css')
  script(src='/js/html.js')
  script(src='/js/renderers/highlight.js')
  script(src='/js/renderers/playerResources.js')
  script(src='/js/renderers/playersList.js')
  script(src='/js/renderers/stockMarket.js')
  script(src='/js/renderers/board.js')
