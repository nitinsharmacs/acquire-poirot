body
  div(class="page-wrapper")
    div(class="game-page")
      section
        div(class="board")
          div(class="branding left")
            h2 ACQUIRE
          div(class="board-tiles")
          div(class="branding right")
            h2 ACQUIRE
        div(class="player-resources" id="player-resources")
      section
        div(class="player-activities")
          div(class="activity-logs")
            h3(class="component-heading") Activity Logs
            div(class="logs")
          div
            header
              button(id="info-card-btn") Info Card
              div(class="info-card hide" id="info-card")
              button(class="fa-solid fa-arrow-right-from-bracket")
            div(class="players")
              h3(class="component-heading") Players
              div(class="players-list" id="players-list")
        form(class="stock-market" id="stock-market")